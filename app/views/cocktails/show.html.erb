<div class="container">
  <div class="row">
    <div class="col-sm-offset-4 col-sm-4">
      <h1><%= @cocktail.name %></h1>
      <%= link_to 'Back', cocktails_path %>

        <h3>Recette actuelle</h3>
        <% @cocktail.doses.each do |dose| %>
          <p><%= dose.description %>Desc:</p>
        <% end %>
</br>
      <%= simple_form_for(@dose) do |f| %>
        <%= f.error_notification %>
<!-- <%= f.input :ingredient, collection: Ingredient.all %> IDENTIQUE A LIGNE SUIVANTE -->

        <%= f.association :ingredient %>
        <%= f.input :description %>
        <%= f.button :submit, class: 'btn btn-success btn-block' %>
      <% end %>
    </div>
  </div>
</div>
